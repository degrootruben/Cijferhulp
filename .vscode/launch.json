{
    "version": "1.0.0",
    "configurations": [
      {
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "name": "Debug Typescript",
        "restart": true,
        "request": "launch",
        "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/ts-node-dev",
        "skipFiles": [ "<node_internals>/**" ],
        "type": "node",
        "runtimeArgs": [ "--respawn" ],
        "args": [ "${workspaceFolder}/src/app.ts" ]
      }
    ]
  }